<div class="container">
  <h1 class="title">投稿一覧</h1>
    <%= link_to '新しく投稿する', new_blog_path %>
      <div class="row">
        <% @blogs.each do |blog| %>
          <div class="col-md-12 content">
            <br>
            <div class="pic-container">
              <%= image_tag blog.image.url, class:"pic" %>
            </div>
            <br>
              <i class="fas fa-user-alt"></i><%= blog.user.name %>
            <br>
              <i class="fas fa-leaf"></i><%= blog.title %>
            <br>
              <i class="far fa-comment-dots"></i><%= blog.content %>
            <br>
              <%= link_to '詳細を確認する', blog_path(blog.id) %>
            <br>
              <%= link_to "この投稿を編集する", edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？' } %>
            <br>
              <%= link_to 'この投稿を削除する', blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %>
            <br>
          </div>
        <% end %>
      </div>
</div>
