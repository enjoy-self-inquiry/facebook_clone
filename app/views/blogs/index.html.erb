<div class="container">
  <h1 class="title">投稿一覧</h1>
      <div class="row">
        <% @blogs.each do |blog| %>
          <div class="col-md-12 content">
            <br>
            <div class="pic-container">
              <%= image_tag blog.image.url, class:"pic" %>
            </div>
            <br>
              <i class="fas fa-user-alt"></i><%= blog.user.name %>
            <br>
              <i class="fas fa-leaf"></i><%= blog.title %>
            <br>
              <i class="far fa-comment-dots"></i><%= blog.content %>
            <br>
              <%= link_to blog_path(blog.id), title:"more detail" do %>
                <i class="fas fa-info-circle"></i>
              <% end %>
            <br>
              <%= link_to edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？' }, title:"edit" do %>
                <i class="far fa-edit"></i>
              <% end %>
            <br>
              <%= link_to blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, title:"delete" do %>
                <i class="far fa-trash-alt"></i>
              <% end %>
            <br>
          </div>
        <% end %>
      </div>
</div>
